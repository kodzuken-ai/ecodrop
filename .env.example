# Django Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED ENVIRONMENT VARIABLES FOR RAILWAY
# ===========================================

# SECURITY: Generate a new secret key for production
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this

# Set to True for development, False for production
DEBUG=False

# Database settings (Railway will provide this automatically when you add PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database_name

# SSL Redirect (set to True only after SSL is properly configured)
SECURE_SSL_REDIRECT=False

# ===========================================
# CLOUDINARY SETTINGS (for media files)
# ===========================================
# Sign up at https://cloudinary.com to get these values
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# OPTIONAL: AUTOMATIC SUPERUSER CREATION
# ===========================================
# These are used during deployment to create an admin account
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@ecodrop.com
DJANGO_SUPERUSER_PASSWORD=change-this-password-123
